---
// Enhanced header with improved visual design and responsive behavior
import { CalendarCheck, LogIn, Menu, X } from '@lucide/astro';
---

<header class="header-glass">
  <div class="header-container">
    <div class="logo-section">
      <img src="/images/logo.webp" alt="Hotel Gneis Logo" class="logo-img" loading="lazy" />
      <span class="brand-name">Gneis</span>
    </div>

    <!-- Mobile menu toggle -->
    <button class="mobile-toggle" aria-label="Toggle menu">
      <Menu class="menu-icon" size={24} />
      <X class="close-icon" size={24} />
    </button>

    <!-- Navigation actions -->
    <nav class="nav-actions" role="navigation">
      <button class="action-btn reservar-btn" type="button">
        <CalendarCheck size={20} class="btn-icon" />
        <span class="btn-text">Reservar</span>
      </button>
      <button class="action-btn login-btn" type="button" onclick="window.location.href='/login'">
        <LogIn size={20} class="btn-icon" />
        <span class="btn-text">Iniciar Sesi√≥n</span>
      </button>
    </nav>
  </div>
  <div class="scroll-progress-bar"><div class="scroll-progress-fill"></div></div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileToggle = document.querySelector('.mobile-toggle');
    const navActions = document.querySelector('.nav-actions');
    const header = document.querySelector('.header-glass');
    const progressBar = document.querySelector('.scroll-progress-fill');

    if (mobileToggle && navActions) {
      mobileToggle.addEventListener('click', function() {
        const isOpen = navActions.classList.contains('active');
        navActions.classList.toggle('active');
        mobileToggle.classList.toggle('active');
        document.body.classList.toggle('nav-open', !isOpen);
      });

      // Close mobile menu when clicking outside
      document.addEventListener('click', function(e) {
        const targetNode = e.target as Node;
        if (header && !header.contains(targetNode)) {
          navActions.classList.remove('active');
          mobileToggle.classList.remove('active');
          document.body.classList.remove('nav-open');
        }
      });

      // Close mobile menu on window resize
      window.addEventListener('resize', function() {
        if (window.innerWidth > 768) {
          navActions.classList.remove('active');
          mobileToggle.classList.remove('active');
          document.body.classList.remove('nav-open');
        }
      });
    }

    // Scroll progress bar logic
    function updateScrollProgress() {
      const scrollTop = window.scrollY || document.documentElement.scrollTop;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const percent = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
      if (progressBar && progressBar instanceof HTMLElement) {
        progressBar.style.width = percent + '%';
      }
    }
    window.addEventListener('scroll', updateScrollProgress);
    window.addEventListener('resize', updateScrollProgress);
    updateScrollProgress();
  });
</script>

<style>
  /* Usando variables globales del CSS root */
  :root {
    --shadow-light: rgba(0, 171, 145, 0.08);
    --shadow-medium: rgba(0, 171, 145, 0.15);
    --shadow-strong: rgba(46, 47, 48, 0.12);
    --border-light: rgba(230, 230, 230, 0.8);
    --glass-bg: rgba(253, 255, 255, 0.85);
    --transition-smooth: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-quick: all 0.2s ease-out;
  }

  .header-glass {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    width: 100vw;
    background: var(--glass-bg);
    backdrop-filter: blur(16px) saturate(1.3);
    -webkit-backdrop-filter: blur(16px) saturate(1.3);
    border-bottom: 1px solid var(--border-light);
    box-shadow: 0 4px 20px var(--shadow-light);
    transition: var(--transition-smooth);
  }

  .header-glass::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(0, 171, 145, 0.02) 0%, 
      rgba(253, 255, 255, 0.05) 100%);
    pointer-events: none;
  }

  .header-container {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1.5rem;
    position: relative;
    min-height: 60px;
  }

  .logo-section {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    z-index: 2;
  }

  .logo-img {
    height: 3rem;
    width: auto;
    max-width: 140px;
    object-fit: contain;
    filter: drop-shadow(0 2px 4px rgba(0, 171, 145, 0.1));
    transition: var(--transition-quick);
  }

  .logo-img:hover {
    filter: drop-shadow(0 4px 8px rgba(0, 171, 145, 0.15));
    transform: scale(1.02);
  }

  .brand-name {
    font-size: 2.25rem;
    font-weight: 900;
    color: var(--color-primary);
    letter-spacing: 0.5px;
    text-shadow: 0 2px 8px var(--shadow-light);
    background: linear-gradient(135deg, var(--color-primary), #00C4A7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .mobile-toggle {
    display: none;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border: none;
    background: rgba(0, 171, 145, 0.1);
    color: var(--color-primary);
    border-radius: 12px;
    cursor: pointer;
    transition: var(--transition-quick);
    position: relative;
    z-index: 3;
  }

  .mobile-toggle:hover {
    background: rgba(0, 171, 145, 0.15);
    transform: scale(1.05);
  }

  .mobile-toggle .close-icon {
    display: none;
  }

  .mobile-toggle.active .menu-icon {
    display: none;
  }

  .mobile-toggle.active .close-icon {
    display: block;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 2;
  }

  .action-btn {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: var(--transition-quick);
    position: relative;
    overflow: hidden;
    outline: none;
    white-space: nowrap;
  }

  .action-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent, 
      rgba(255, 255, 255, 0.2), 
      transparent);
    transition: left 0.5s;
  }

  .action-btn:hover::before {
    left: 100%;
  }

  .btn-icon {
    stroke-width: 2.2;
    transition: var(--transition-quick);
  }

  .reservar-btn {
    background: linear-gradient(135deg, var(--color-primary), #00C4A7);
    color: white;
    box-shadow: 0 4px 15px var(--shadow-medium);
  }

  .reservar-btn:hover,
  .reservar-btn:focus {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 6px 25px var(--shadow-medium);
  }

  .reservar-btn:active {
    transform: translateY(0) scale(0.98);
  }

  .login-btn {
    background: linear-gradient(135deg, var(--color-dark), #404142);
    color: white;
    box-shadow: 0 4px 15px var(--shadow-strong);
  }

  .login-btn:hover,
  .login-btn:focus {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 6px 25px var(--shadow-strong);
  }

  .login-btn:active {
    transform: translateY(0) scale(0.98);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .header-container {
      padding: 0.5rem 1rem;
      min-height: 55px;
    }

    .logo-img {
      height: 2.5rem;
    }

    .brand-name {
      font-size: 1.8rem;
    }

    .mobile-toggle {
      display: flex;
    }

    .nav-actions {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--glass-bg);
      backdrop-filter: blur(16px) saturate(1.3);
      -webkit-backdrop-filter: blur(16px) saturate(1.3);
      border-top: 1px solid var(--border-light);
      box-shadow: 0 8px 25px var(--shadow-light);
      flex-direction: column;
      gap: 0.75rem;
      padding: 1.5rem 1rem;
      transform: translateY(-10px);
      opacity: 0;
      visibility: hidden;
      transition: var(--transition-smooth);
    }

    .nav-actions.active {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
    }

    .action-btn {
      width: 100%;
      justify-content: center;
      padding: 1rem 1.5rem;
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .header-container {
      padding: 0.5rem 0.75rem;
    }

    .brand-name {
      font-size: 1.6rem;
    }

    .logo-img {
      height: 2.2rem;
    }

    .action-btn {
      padding: 0.875rem 1.25rem;
    }
  }

  @media (min-width: 769px) {
    .header-container {
      padding: 0.75rem 2rem;
    }
  }

  @media (min-width: 1200px) {
    .header-container {
      padding: 0.75rem 2.5rem;
    }

    .brand-name {
      font-size: 2.5rem;
    }

    .logo-img {
      height: 3.5rem;
    }
  }

  /* Accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }

  /* Focus styles for keyboard navigation */
  .action-btn:focus-visible,
  .mobile-toggle:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  /* Prevent body scroll when mobile menu is open */
  body.nav-open {
    overflow: hidden;
  }
</style>
<style is:global>
  body {
    padding-top: 72px;
  }
  @media (max-width: 768px) {
    body {
      padding-top: 60px;
    }
  }
</style>
<style>
  .scroll-progress-bar {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 4px;
    background: transparent;
    z-index: 2000;
    width: 100%;
    pointer-events: none;
  }
  .scroll-progress-fill {
    height: 100%;
    width: 0%;
    background: linear-gradient(90deg, var(--color-primary), #00C4A7);
    border-radius: 2px;
    box-shadow: 0 1px 6px var(--shadow-light);
    transition: width 0.18s cubic-bezier(0.4,0,0.2,1);
  }
</style>