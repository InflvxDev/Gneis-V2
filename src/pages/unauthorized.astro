---
import Header from '../components/landing-page/Header.astro';
import Footer from '../components/landing-page/Footer.astro';
import Layout from '../layouts/Layout.astro';
import { ShieldX, ArrowLeft, Home } from '@lucide/astro';
---

<Layout>
	<main class="unauthorized-main">
		<div class="unauthorized-container">
			<div class="unauthorized-content">
				<!-- Icon and Status -->
				<div class="status-icon">
					<ShieldX size={120} class="icon-unauthorized" />
				</div>
				
				<!-- Main Message -->
				<div class="message-section">
					<h1 class="error-title">Acceso No Autorizado</h1>
					<h2 class="error-subtitle">Error 401</h2>
					<p class="error-description">
						Lo sentimos, no tienes los permisos necesarios para acceder a esta página. 
						Por favor, inicia sesión con una cuenta autorizada o contacta al administrador.
					</p>
				</div>
				
				<!-- Action Buttons -->
				<div class="action-buttons">
					<a href="/login" class="btn btn-primary">
						<ArrowLeft size={20} class="btn-icon" />
						<span>Iniciar Sesión</span>
					</a>
					<a href="/" class="btn btn-secondary">
						<Home size={20} class="btn-icon" />
						<span>Volver al Inicio</span>
					</a>
				</div>
				
			</div>
		</div>
	</main>
	
	<Footer />
</Layout>

<style>
	/* Variables específicas para la página unauthorized */
	:root {
		--unauthorized-bg: linear-gradient(135deg, 
			rgba(253, 255, 255, 0.98) 0%, 
			rgba(250, 252, 252, 0.95) 100%);
		--card-shadow: 0 20px 40px rgba(46, 47, 48, 0.08);
		--error-color: #e74c3c;
		--warning-color: #f39c12;
	}

	.unauthorized-main {
		min-height: 100vh;
		background: var(--unauthorized-bg);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 120px 1.5rem 80px 1.5rem;
		position: relative;
	}

	.unauthorized-main::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 20% 80%, rgba(0, 171, 145, 0.03) 0%, transparent 50%),
			radial-gradient(circle at 80% 20%, rgba(0, 171, 145, 0.02) 0%, transparent 50%);
		pointer-events: none;
	}

	.unauthorized-container {
		width: 100%;
		max-width: 600px;
		margin: 0 auto;
		position: relative;
		z-index: 2;
	}

	.unauthorized-content {
		background: rgba(253, 255, 255, 0.95);
		backdrop-filter: blur(16px) saturate(1.2);
		-webkit-backdrop-filter: blur(16px) saturate(1.2);
		border-radius: 24px;
		padding: 3rem 2.5rem;
		box-shadow: var(--card-shadow);
		border: 1px solid rgba(230, 230, 230, 0.6);
		text-align: center;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.unauthorized-content:hover {
		box-shadow: 0 24px 48px rgba(46, 47, 48, 0.12);
		transform: translateY(-2px);
	}

	.status-icon {
		margin-bottom: 2rem;
		animation: float 3s ease-in-out infinite;
	}

	.icon-unauthorized {
		color: var(--error-color);
		filter: drop-shadow(0 4px 12px rgba(231, 76, 60, 0.2));
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-8px);
		}
	}

	.message-section {
		margin-bottom: 2.5rem;
	}

	.error-title {
		font-size: 2.2rem;
		font-weight: 700;
		color: var(--color-dark);
		margin-bottom: 0.5rem;
		letter-spacing: -0.5px;
		line-height: 1.2;
	}

	.error-subtitle {
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--error-color);
		margin-bottom: 1.5rem;
		letter-spacing: 0.5px;
	}

	.error-description {
		font-size: 1.1rem;
		color: #666;
		line-height: 1.6;
		max-width: 480px;
		margin: 0 auto;
		font-weight: 400;
	}

	.action-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
		margin-bottom: 2rem;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.9rem 1.8rem;
		border-radius: 12px;
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border: 2px solid transparent;
		position: relative;
		overflow: hidden;
	}

	.btn::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
		transition: left 0.5s;
	}

	.btn:hover::before {
		left: 100%;
	}

	.btn-primary {
		background: var(--color-primary);
		color: white;
		box-shadow: 0 4px 16px rgba(0, 171, 145, 0.3);
	}

	.btn-primary:hover {
		background: #008f7a;
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(0, 171, 145, 0.4);
	}

	.btn-secondary {
		background: transparent;
		color: var(--color-dark);
		border-color: rgba(46, 47, 48, 0.2);
		box-shadow: 0 4px 16px rgba(46, 47, 48, 0.1);
	}

	.btn-secondary:hover {
		background: var(--color-dark);
		color: white;
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(46, 47, 48, 0.2);
	}

	.btn-icon {
		transition: transform 0.3s ease;
	}

	.btn:hover .btn-icon {
		transform: translateX(-2px);
	}

	.help-section {
		padding-top: 2rem;
		border-top: 1px solid rgba(230, 230, 230, 0.6);
	}

	.help-text {
		font-size: 0.95rem;
		color: #888;
		margin-bottom: 0.75rem;
		font-weight: 400;
	}

	.help-link {
		color: var(--color-primary);
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		transition: all 0.3s ease;
		position: relative;
	}

	.help-link::after {
		content: '';
		position: absolute;
		width: 0;
		height: 2px;
		bottom: -2px;
		left: 0;
		background: var(--color-primary);
		transition: width 0.3s ease;
	}

	.help-link:hover::after {
		width: 100%;
	}

	.help-link:hover {
		color: #008f7a;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.unauthorized-main {
			padding: 100px 1rem 60px 1rem;
		}

		.unauthorized-content {
			padding: 2rem 1.5rem;
			border-radius: 20px;
		}

		.error-title {
			font-size: 1.8rem;
		}

		.error-description {
			font-size: 1rem;
		}

		.action-buttons {
			flex-direction: column;
			align-items: center;
		}

		.btn {
			width: 100%;
			max-width: 280px;
			justify-content: center;
		}

		.icon-unauthorized {
			width: 80px;
			height: 80px;
		}
	}

	@media (max-width: 480px) {
		.unauthorized-content {
			padding: 1.5rem 1rem;
		}

		.error-title {
			font-size: 1.6rem;
		}

		.error-description {
			font-size: 0.95rem;
		}
	}
</style>